{
  "name": "mapado-image-js-crop",
  "version": "1.1.0",
  "description": "Cropping mapado image in JS",
  "main": "dist/index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register  --recursive",
    "test:watch": "npm run test -- --watch",
    "build": "./node_modules/.bin/babel src --out-dir dist && git add dist/ && git commit dist/ -m 'build module'"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/mapado/image-js-crop.git"
  },
  "author": "Julien Deniau",
  "homepage": "https://bitbucket.org/mapado/image-js-crop#readme",
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "new-cap": [
        2,
        {
          "newIsCap": true,
          "capIsNew": false
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true,
          "allow": [
            "_groups"
          ]
        }
      ],
      "react/prefer-es6-class": 1
    }
  },
  "babel": {
    "presets": [
      "react-native"
    ]
  },
  "publishConfig": {
    "registry": "http://npm.mapado.net:4873"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-preset-react-native": "^1.7.0",
    "chai": "^3.5.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "mocha": "^2.4.5"
  }
}
